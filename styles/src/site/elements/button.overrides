/*******************************
         Site Overrides
*******************************/

.ui.button {
border-radius: 0px;
font-family: DMSans;
font-style: normal;
font-weight: 700;
color: @blue;
}

.ui.button.padded { 
padding: 24px 48px;
}

.ui.button.secondary {
padding: 4px 12px;
height: 32px;
border: 2px solid @blue;
box-sizing: border-box;
background-color: transparent;
color: @blue;
}

.ui.button.tertiary {
padding: 12px 24px;
filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
font-size: 17px;
line-height: 24px;
letter-spacing: -0.02em;
flex: none;
order: 0;
flex-grow: 0;
margin: 0px 16px;
}

.ui.button.secondary a {
color: @blue;
}
.ui.button.secondary:hover {
	background-color: @blue;
	color: @white;
}
.ui.button.secondary a:hover {
	color: @white;
}

